# PostgreSQL подключение
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres

# Railway автоматически устанавливает порт
PORT=8000

# S3 настройки
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name
S3_BASE_PATH=user_data/

# API ключ для доступа
API_KEY=change-me-in-production

# JWT настройки
JWT_SECRET_KEY=your-secret-key
JWT_ALGORITHM=HS256
JWT_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Разрешенные домены для CORS (разделенные запятыми)
CORS_ALLOWED_ORIGINS=https://modul4-production.up.railway.app,http://localhost:3000

# Настройки безопасности и отладки
DEBUG=False
LOG_LEVEL=INFO
RATE_LIMIT=100
PASSWORD_SALT=your-random-salt